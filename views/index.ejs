<!DOCTYPE html>
<html lang="es">
<%- include('partials/head') %> 

<body>
	<%- include('partials/header') %> 
	
	<section class="banner">
		<img src="/images/img-home-banner.jpg" alt="">
	</section>
	
	<div class="container">
		<!-- SECCION: PRODUCTOS ULTIMA VISITA -->
		<section class="row">
			<div class="titulo col-12">
				<h2>
					Basado en tu Ãºltima visita
				</h2>
			</div>
			<% dataMasVendidos.forEach(element=>{ %>
				
			<div class="col-12 col-md-6 col-lg-3">
				<article class="producto">
					<div class="contenido">
						<figure>
							<a href="/product/detail/<%= element.id  %>/<%= element.category %>"><img src="/images/products/<%= element.image %> " alt=""></a>
						</figure>
						<article>
							<h2>
								$<%= toThousand(element.price - parseInt(element.price * element.discount / 100)) %> 
							</h2>
							<span><%= element.discount == 0 ? null : element.discount + '%' %> </span>
							<i class="fas fa-truck "></i>
						</article>
						<div class="detalle">
							<p><%= element.name %> </p>
						</div>
					</div>
				</article>
			</div>
		<% }) %> 
			
		</section>
		
		<!-- SECCION: OFERTAS -->
		
		<section class="row">
			<div class="titulo col-12">
				<h2>
					Ofertas
				</h2>
			</div>
			<% dataOfertas.forEach(element=>{ %>

				<div class="col-12 col-md-6 col-lg-3">
					<article class="producto">
						<div class="contenido">
							<figure>
								<a href="/product/detail/<%= element.id  %>/<%= element.category %>"><img src="/images/products/<%= element.image %> " alt=""></a>
							</figure>
							<article>
								<h2>
									$<%= toThousand(element.price - parseInt(element.price * element.discount / 100)) %> 
								</h2>
								<span><%= element.discount == 0 ? null : element.discount + '%' %> </span>
								<i class="fas fa-truck "></i>
							</article>
							<div class="detalle">
								<p><%= element.name %> </p>
							</div>
						</div>
					</article>
				</div>
			<% }) %>			
			
		</section>
		
	</div>
	
	<%- include('partials/footer') %>
	<%- include('partials/scripts') %>  
</body>
</html>